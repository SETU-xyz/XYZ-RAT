	fi



###############################################################
# Update
###############################################################
elif [ "$1" == "update" ]
then
	cd
	printf " ${IGreen}   [â˜¢] ğ™‹ğ™¡ğ™šğ™–ğ™¨ğ™š ğ™’ğ™–ğ™ğ™© ğ™“ğ™”ğ™• ğ™ğ˜¼ğ™ ğ™ğ™¨ ğ™ğ™¥ğ™™ğ™–ğ™©ğ™ğ™£ğ™œ... \n" | pv -qL 30
	rm -rf $PREFIX/bin/xyzrat
	rm -rf $PREFIX/share/XYZ RAT
	rm -rf XYZ-RAT > /dev/null 2>&1 
	git clone https://github.com/SETU-xyz/XYZ-RAT.git > /dev/null 2>&1
	cd XYZ-RAT
	mv XYZ RAT/xyzrat  $PREFIX/bin
	mv XYZ RAT  $PREFIX/share
	chmod +x $PREFIX/bin/xyzrat
	rm -rf $HOME/XYZ-RAT
	cd $PREFIX/share/XYZ RAT/server
	npm install pm2 -g
	npm install 
	printf " ${IGreen}   [âœ”] ğ™“ğ™”ğ™• ğ™ğ˜¼ğ™ ğ™ğ™¥ğ™™ğ™–ğ™©ğ™šğ™™ ğ™ğ™ğ™˜ğ™šğ™¨ğ™¨ğ™›ğ™ªğ™¡ \n" | pv -qL 30
	

###############################################################
# Else Part 
###############################################################
else
	printf "${IRed}    [-] ğ™€ğ™§ğ™§ğ™¤ğ™§ ğ™ğ™§ğ™® ğ™–ğ™œğ™–ğ™ğ™£ ğ™¬ğ™ğ™©ğ™ -ğ™\n" | pv -qL 30
